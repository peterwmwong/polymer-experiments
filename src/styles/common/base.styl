@import 'buttons'
@import 'colors'

// Common styles shared across all elements
input, button, a
  &:focus
    outline 1px solid color-blue

a
  color color-blue
  text-decoration none

  &:hover
    color color-blue

input
  color color-text
  background-color transparent
  border none
  border-bottom 1px solid #DDD
  box-sizing border-box
  font-size 1em
  height 2.5em
  padding 0 .5em

  &::-webkit-input-placeholder
    color #CCC

button
  button( color-blue )