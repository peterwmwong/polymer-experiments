@import 'buttons'
@import 'colors'
@import 'constants'

@css {
  @host {
    * {
      background-color: #FFF;
      display: block;
      color: #444;
      font-size: 16px;
    }
  }
}

.banner
  text-align center
  height 3*base-font-size
  line-height 3*base-font-size
  font-size 1.25em
  color grayscale-1
  background-color grayscale-4
  border-top 1px solid color-white
  border-bottom 1px solid grayscale-3
  vertical-align bottom
  overflow hidden
  box-sizing border-box

  position absolute
  top 0
  left 0
  right 0
  z-index 2

  > .btn-compose-newTodo, > .btn-settings
    button( rgba(color-white,0) )
    height 2.75*base-font-size
    line-height 2.5*base-font-size
    color darken(grayscale-3,5%)
    font-size 1.25em
    position relative

    &:before
      content '+'
      display block
      position absolute
      top 0
      left 0
      right 0
      text-align center

    &.btn-settings
      float left

      &:before
        content '='

    &.btn-compose-newTodo
      float right


.inputWrap
  display none
  padding 10px

  > #newTodo
    display block
    background-color transparent
    width 100%
    border none
    outline none
    font-size 22px

    &::-webkit-input-placeholder
      font-style italic

#todos
  background-color color-white
  margin-top 3em
  z-index 1
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow scroll
  -webkit-overflow-scrolling touch

  > .todo
    border-bottom 1px solid grayscale-4
    color grayscale-0
    display block
    padding 1em
    text-decoration none

#todoDetails
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 0