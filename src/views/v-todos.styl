@import 'gradient'
@import 'buttons'

@css {
  @host {
    * {
      background-color: #FFF;
      display: block;
      color: #444;
      font-size: 16px;
    }
  }
}

banner-height = 1.75em

.banner
  text-align center
  height banner-height
  line-height 1.8em
  font-size 1.25em
  color #999
  background-color #F3F3F3
  border-top 1px solid #FFF
  border-bottom 1px solid #DDD
  padding 5px 0px
  vertical-align bottom

  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 1

  > .btn-compose-newTodo, > .btn-settings
    button( rgba(255,255,255,0) )
    height 100%
    color #DDD
    font-size 1.25em
    line-height 20px
    font-weight bold
    float right
    vertical-align top
    position relative

    &.btn-settings
      float left

      &:before
        content '='

    &:before
      content '+'
      display block
      position absolute
      top 5px
      bottom 0
      left 0
      right 0
      text-align center

.inputWrap
  display none
  padding 10px

  > #newTodo
    display block
    background-color transparent
    width 100%
    border none
    outline none
    font-size 22px

    &::-webkit-input-placeholder
      font-style italic

#todos
  margin-top 47px
  z-index 1

  &.editing
    display none

  v-todo-item
    border-bottom 1px solid #F3F3F3

    &:last-child
      border-bottom none