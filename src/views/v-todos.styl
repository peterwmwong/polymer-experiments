@import 'gradient'
@import 'buttons'

@css {
  @host {
    * {
      background-color: #FFF;
      display: block;
      color: #444;
      font-size: 16px;
    }
  }
}

banner-height = 1.75em

.banner
  text-align center
  height banner-height
  line-height 1.8em
  font-size 1.25em
  color #888
  gradient lighten(#EEE,50%) #EEE
  border-top 1px solid #FFF
  border-bottom 1px solid #DDD
  padding 5px 0px
  vertical-align bottom

  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 1

  > .title
    // display inline-block
    // background-color #888
    text-shadow 0px 1px #FFF

  > .btn-compose-newTodo, > .btn-settings
    button( rgba(255,255,255,0) )
    height 100%
    color #CCC
    font-size 1.25em
    line-height 20px
    font-weight bold
    float right
    vertical-align top
    position relative

    &.btn-settings
      float left

      &:before
        content '='

    &:before
      content '+'
      display block
      position absolute
      top 5px
      bottom 0
      left 0
      right 0
      text-align center

.inputWrap
  display none
  padding 10px

  > #newTodo
    display block
    background-color transparent
    width 100%
    border none
    outline none
    font-size 22px

    &::-webkit-input-placeholder
      font-style italic


// Semi-transparent Black mask
#blackbg
  display block
  position fixed
  top 0px
  bottom 0px
  right 0px
  left 0px
  background-color #000
  opacity 0
  z-index -1
  -webkit-transition opacity 300ms ease

  &.editingTodo
    opacity 0.65
    z-index 4

#todos
  margin-top 3em
  z-index 2

  &.editing
    display none

  v-todo-item
    border-bottom 1px solid #EEE

    &:last-child
      border-bottom none