@css {
  @host {
    v-todo-item {
      display: block;
      list-style: none;
      padding: 15px 10px;
    }
  }
}

.wrap
  &.editing
    > .deleteTodo
      display none

  > .editTodoTextWrap
    display block
    overflow hidden

    > .editTodoText
      display block
      font-size inherit
      outline none
      border none

  > .doneTodo
    float left
    margin-top 5px
    margin-right 10px