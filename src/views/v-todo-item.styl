@import 'buttons'

@css {
  @host {
    v-todo-item {
      display: block;
      list-style: none;
      min-height: 54px;
      z-index: 1;
    }
  }
}

.btn-back
  cursor pointer
  position fixed
  z-index 4
  top 5px
  left 0px

  color #BBB
  background-color rgba(0,0,0,.5)
  text-align center
  line-height 34px
  height 38px
  font-weight bold
  font-size 26px
  border-radius 0 5px 5px 0
  padding 0 12px 0 8px

#wrap
  panel-border-radius = 3px
  expansion-transition-duration = 400ms

  &.editing

    // Semi-transparent Black mask
    > #blackbg
      display block
      position fixed
      top 0px
      bottom 0px
      right 0px
      left 0px
      background-color #000
      opacity 0.65
      z-index 1

    > #panelContainer
      -webkit-transition -webkit-transform expansion-transition-duration
      position fixed
      bottom 0px
      top 0px
      left 0px
      right 0px
      z-index 2

      > .basicPanel
        border-bottom 1px solid #CCC
        margin-top 48px
        background-color #FFF

        > .editTodoTextWrap
          > .editTodoTextReadOnly
            display none
          > .editTodoText
            display block

        > .btn-close
          button( rgba(255,255,255,0) )
          float right
          padding 0 5px 0 10px
          color #FFF
          font-size 22px
          line-height 0px
          height 20px

      > .detailedPanelContainer

        > #detailedPanel
          background-color #FFF

          > .header
            background-color #F3F3F3
            padding 5px 10px
            font-size .75em
            color #999

          > .section
            position relative
            padding 15px 9px

            > .notes
              border none
              border-radius 0
              font-size inherit
              margin 0
              outline none
              padding 0
              width 100%

              &::-webkit-input-placeholder
                font-style italic
                color #BBB

  > #blackbg
    opacity 0
    -webkit-transition opacity expansion-transition-duration ease

  > #panelContainer
    overflow hidden
    -webkit-transform translate3d(0,0,0)

    > .basicPanel
      overflow hidden
      padding 15px 10px

      > .editTodoTextWrap
        overflow hidden
        padding 2px

        > .editTodoText
          display none
          font-size inherit
          outline none
          border none
          padding 0
          margin 0
          width 100%

      > .doneTodo
        float left
        margin-top 5px
        margin-right 10px

    > .detailedPanelContainer
      position absolute
      overflow hidden
      top 101px
      bottom 0
      left 0
      right 0
      
      > #detailedPanel
        -webkit-transition -webkit-transform expansion-transition-duration ease
        -webkit-transform translate3d(0,-480px,0)
        height 100%
