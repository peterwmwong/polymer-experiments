@import 'buttons'

@css {
  @host {
    v-todo-item {
      display: block;
      list-style: none;
      min-height: 54px;
      z-index: 1;
    }
  }
}

#btnBack
  cursor pointer
  display none
  position fixed
  z-index 5
  top 5px
  left 0

  color #BBB
  background-color rgba(0,0,0,.5)
  text-align center
  line-height 34px
  height 38px
  font-weight bold
  font-size 26px
  border-radius 0 5px 5px 0
  padding 0 12px 0 8px

  &.editing
    display block

#wrap
  panel-border-radius = 3px
  expansion-transition-duration = 400ms
  -webkit-transition background-color expansion-transition-duration

  &.editing
    position fixed
    bottom 0px
    top 0px
    left 0px
    right 0px
    z-index 3
    overflow scroll
    -webkit-overflow-scrolling touch

    background-color rgba(0,0,0,.65) !important

    &:before
      content ''
      height 101%
      width 0
      background-color #0F0
      float left
      z-index 100

    > #panelContainer
      -webkit-transition -webkit-transform expansion-transition-duration
      height auto

      > .basicPanel
        border-bottom 1px solid #CCC
        margin-top 48px
        background-color #FFF
        padding 15px 10px

        > .editTodoTextWrap
          > .editTodoTextReadOnly
            display none
          > .editTodoText
            display block

        > .btn-close
          button( rgba(255,255,255,0) )
          float right
          padding 0 5px 0 10px
          color #FFF
          font-size 22px
          line-height 0px
          height 20px

      > .detailedPanelContainer

        > #detailedPanel
          visibility visible
          -webkit-transform translate3d(0,0,0)

          > .header
            background-color #F3F3F3
            padding 5px 10px
            font-size .75em
            color #999

          > .section
            position relative
            padding 15px 9px

            > .notes
              border none
              border-radius 0
              font-size inherit
              margin 0
              outline none
              padding 0
              width 100%

              &::-webkit-input-placeholder
                font-style italic
                color #BBB


  > #panelContainer
    position relative
    height 54px
    overflow hidden
    z-index 1

    > .basicPanel
      overflow hidden
      padding 15px 15px
      -webkit-transform translate3d(0,0,0)
      z-index 2

      > .editTodoTextWrap
        overflow hidden
        padding 2px

        > .editTodoText
          display none
          font-size inherit
          outline none
          border none
          padding 0
          margin 0
          width 100%

      > .doneTodo
        float left
        margin-top 5px
        margin-right 10px

    > .detailedPanelContainer
      overflow hidden

      > #detailedPanel
        -webkit-transition -webkit-transform expansion-transition-duration ease
        -webkit-transform translate3d(0,-100%,0)
        background-color #FFF
        z-index 1
        visibility hidden
