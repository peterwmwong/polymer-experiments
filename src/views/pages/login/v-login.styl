@import 'buttons'
@import 'colors'
@import 'gradient'

@css {
  @host {
    v-login {
      display: block;
      text-align: center;
      font-size: 16px;
    }

    v-login:after {
      content: '';
      display: inline-block;
      height: 100%;
      vertical-align: middle;
    }
  }
}

.panel
  display inline-block
  overflow hidden
  width 450px
  box-shadow 0px 1px 3px #BBB
  background-color #FFF
  box-sizing border-box

  // TODO: Not sure why our vertical is not working
  //       for short windows sizes...
  margin-top 50px

  > #banner
    background-color #F3F3F3
    color #999

    font-family 'Expletus Sans', Helvetica, sans-serif
    font-weight 700
    font-size 3em
    padding .75em 0 .4em 0
    position relative
    z-index 1

  > form
    border-top 1px solid #DDD
    overflow hidden
    padding 2em 4em 2.75em 4em

    > input
      width 100%
      margin-bottom .5em

      &:nth-child(2)
        margin-bottom 2em

    > #signup
      button( color-red )
      float left

    > #login
      margin-left 1em
      float right

    > #signup, > #login
      width 100px

