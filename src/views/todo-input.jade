polymer-element( name='todo-input', extends='input', on-blur='onBlur', on-focus='onFocus', on-keyup='onKeyup', type='text' )
  :coffeescript
    Polymer 'todo-input',
      onBlur: -> @fire 'blurred'

      onFocus: ->
        @fire 'focused'
        @asyncMethod @focus

      onKeyup: (ev)->
        if ev.which in [13, 27]
          @fire 'blurred'
          @asyncMethod @blur