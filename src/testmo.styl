html, body
  height 100%
  width 100%
  margin 0
  padding 0

#panel
  overflow hidden
  -webkit-transform translate3d(0,0,0)
  position fixed
  top 100%
  width 100%
  height 100%
  background-color #333
  color #FFF

  &.animateTop
    -webkit-transition top 1000ms ease

    &.s-doit
      top 0px

  &.animateTransform
    -webkit-transition -webkit-transform 1000ms ease

    &.s-doit
      -webkit-transform translate3d(0,-100%,0)
