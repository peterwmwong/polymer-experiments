== html_test 'resources/todo-resource.html'

  / Mocks/Helpers
  / -------------
  script src='../../../helpers/MockTodo.js'

  polymer-element name="t-test"
    template
      todo-resource-storage items="{{ todos }}"
      
    coffee:
      # Setup
      # -----
      localStorage.removeItem 'ioi-store'
      note1 = @MockTodo()
      note2 = @MockTodo()
      note3 = @MockTodo()
      localStorage.setItem 'ioi-store', JSON.stringify AllMockTodos = @MockTodo.all

      Polymer 't-test',

        # Test
        # ----
        todosChanged: ->
          return if not @todos or @testStarted
          @testStarted = true

          expect(@todos).to.deep.equal AllMockTodos
          done()
